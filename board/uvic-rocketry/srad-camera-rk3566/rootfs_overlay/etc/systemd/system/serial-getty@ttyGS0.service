[Unit]
Description=Serial Getty on %I
After=usb-gadget.service
Requires=usb-gadget.service

[Service]
ExecStart=-/sbin/agetty -L 115200 %I vt100
Type=idle
Restart=always
RestartSec=0
UtmpIdentifier=%I
TTYPath=/dev/%I
TTYReset=yes
TTYVHangup=yes
KillMode=process
IgnoreSIGPIPE=no
SendSIGHUP=yes

[Install]
WantedBy=getty.target
